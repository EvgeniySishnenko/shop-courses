<div class="auth">
  <div class="row">
    <div class="col s12">
      <ul class="tabs">
        <li class="tab col s6"><a class="active" href="#login">Войти</a></li>
        <li class="tab col s6"><a href="#register">Регистрация</a></li>
      </ul>
    </div>

    <div id="login" class="col s6 offset-s3">
      {{#if loginError}}
        <p class="alert">{{loginError}}</p>
      {{/if}}
      <h1>Войти в магазин</h1>
      <form action="/auth/login" method="post" novalidate>
        <div class="input-field">
          <input
            placeholder="Placeholder"
            id="email"
            name="email"
            type="email"
            class="validate"
            required
          />
          <label for="title">Email</label>
          <span
            class="helper-text"
            data-error="Введите email"
            data-success="right"
          ></span>
        </div>
        <div class="input-field">
          <input
            placeholder="Placeholder"
            id="password"
            name="password"
            type="password"
            class="validate"
            required
            min="1"
          />
          <label for="price">Password</label>
          <span
            class="helper-text"
            data-error="Введите password"
            data-success="right"
          ></span>
        </div>
        <input type="hidden" name="_csrf" value="{{csrf}}" />
        <p>
          <a href="/auth/reset">Забыли пароль</a>
        </p>
        <button type="submit" class="btn btn-primary">Войти</button>
      </form>
    </div>
    <div id="register" class="col s6 offset-s3">
      {{#if registerError}}
        <p class="alert">{{registerError}}</p>
      {{/if}}
      <h1>Регистраци</h1>
      <form action="/auth/register" method="post" novalidate>
        <div class="input-field">
          <input
            placeholder="Placeholder"
            id="remail"
            name="remail"
            type="email"
            class="validate"
            required
          />
          <label for="title">Email</label>
          <span
            class="helper-text"
            data-error="Введите email"
            data-success="right"
          ></span>
        </div>

        <div class="input-field">
          <input
            placeholder="Placeholder"
            id="rname"
            name="rname"
            type="text"
            class="validate"
            required
          />
          <label for="title">Name</label>
          <span
            class="helper-text"
            data-error="Введите name"
            data-success="right"
          ></span>
        </div>

        <div class="input-field">
          <input
            placeholder="Placeholder"
            id="rpassword"
            name="rpassword"
            type="password"
            class="validate"
            required
            min="1"
          />
          <label for="price">Password</label>
          <span
            class="helper-text"
            data-error="Введите password"
            data-success="right"
          ></span>
        </div>
        <div class="input-field">
          <input
            placeholder="Placeholder"
            id="confirm"
            name="confirm"
            type="password"
            class="validate"
            required
            min="1"
          />
          <label for="price">Введите пароль еще раз</label>
          <span
            class="helper-text"
            data-error="Введите пароль еще раз"
            data-success="right"
          ></span>
        </div>
        <input type="hidden" name="_csrf" value="{{csrf}}" />

        <button type="submit" class="btn btn-primary">Зарегистрировать</button>
      </form>
    </div>
  </div>
</div>