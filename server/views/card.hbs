<h1>Card</h1>

<div id="card">{{#if courses.length}}
    <table>
      <thead>
        <tr>
          <th>Название</th>
          <th>Кол-во</th>
          <th>Действие</th>
        </tr>
      </thead>
      <body>
        {{#each courses}}
          <tr>
            <th>{{title}}</th>
            <th>{{count}}</th>
            <th><button
                class="btn btn-small js-remove"
                data-id="{{id}}"
                data-csrf="{{@root.csrf}}"
              >Удалить</button></th>
          </tr>
        {{/each}}

      </body>
    </table>
    <p><strong>Цена:</strong> <span class="price"> {{price}}</span></p>
    <form action="/orders" method="post">
      <input type="hidden" name="_csrf" value="{{csrf}}" />

      <button type="submit" class="btn btn-primary">Сделать заказ</button>
    </form>
  {{else}}
    <p>Корзина пуста </p>
  {{/if}}</div>